<div style="max-height: 400px; overflow-y: auto" class="replace-me">
    <table>
        <thead>
        <tr>
            <th class="hidden-xs"></th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Total</th>
        </tr>
        </thead>

        <tbody>

        {{#each items}}
            <tr>
                <td class="hidden-xs">
                    <img style="max-width: 65px" src="{{item_affixed.website_image_affixed.image_filename_url}}" alt="{{item_affixed.website_image_affixed.title}}"></td>
                <td>{{item_affixed.name}}</td>
                <td>
                    <input onchange="caShopping.change_quantity_for( '{{item_id}}', parseInt($(this).val()) )" onkeyup="hierbaBuena.change_quantity_for( '{{item_id}}', parseInt($(this).val()) )" type="number" value="{{quantity}}">
                </td>
                <td>{{item_affixed.formatted_price}}</td>
                <td>{{formatted_total}}</td>
            </tr>

        {{/each}}
        </tbody>
    </table>
    <div class="btn-group">
        <a onclick="return caShopping.show_checkout()" href="#" class="btn default small">ir a la Caja</a>
    </div>

</div>
