<div class="row">
    <div class="col-lg-12">
        <h2 class="text-center">Business Processes</h2>
    </div>
    {{#each this}}
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        {{#if fontawesome_class}}
                            <i class="fa {{fontawesome_class}} fa-2x"></i>&nbsp;
                        {{/if}}
                        {{name}}</h3>
                </div>
                <div class="panel-body">
                    <a class="btn btn-primary" href="{{href}}">Activate Process</a>
                </div>
            </div>
        </div>

    {{/each}}

</div>
